<wxs src="../render.wxs" module="render"></wxs>

<!-- 输入框 -->
<template name="input">
  <form>
    <view class="cu-form-group solid-bottom">
      <view wx:if="{{title}}" class="title">{{title}}</view>
      <input placeholder='{{placeholder||"请输入..."}}'></input>
      <text wx:if="{{icon}}" class="cuIcon-{{icon}} text-{{color||render.color()}}"></text>
      <button wx:if="{{btnText}}" class="cu-btn bg-{{color}} shadow">{{btnText}}</button>
      <view wx:if="{{tag}}" class="cu-capsule radius">
        <view class="cu-tag bg-{{color}}">{{tag}}</view>
        <view wx:if="{{tag2}}" class="cu-tag line-{{color?color:render.color()}}">{{tag2}}</view>
      </view>
    </view>
  </form>
</template>

<!-- 多行文本输入框 -->
<template name="textarea">
  <!-- !!!!! placeholder 在ios表现有偏移 建议使用 第一种样式 -->
  <view class="cu-form-group solid-bottom">
    <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="{{placeholder||'请输入...'}}"></textarea>
  </view>
</template>

<!-- 开关 -->
<template name="switch">
  <view class="cu-form-group">
    <view wx:if="{{title}}" class="title">{{title}}</view>
    <switch class="{{color}} {{shape?shape:''}} sm" checked="{{checked==1?1:0}}"></switch>
  </view>
</template>

<!-- 单选框 -->
<template name="radio">
  <view class="cu-form-group">
    <view wx:if="{{title}}" class="title">{{title}}</view>
    <radio class="{{shape?'radio':''}} {{color?color:''}}" checked="{{checked==1?1:0}}"></radio>
  </view>
</template>

<!-- 复选框 -->
<template name="checkbox">
  <view class="cu-form-group">
    <view wx:if="{{title}}" class="title">{{title}}</view>
    <checkbox class="{{shape?shape:''}} {{color?color:''}}" checked="{{checked==1?1:0}}"></checkbox>
  </view>
</template>

<!-- 上传图片 -->
<template name="upload-img">
  <view class="cu-bar bg-white">
    <view class="action">{{title||'图片上传'}}</view>
    <view class="action">{{imgList.length||0}}/{{size||9}}</view>
  </view>
  <view class="cu-form-group solid-bottom">
    <view class="grid col-{{column||4}} grid-square flex-sub">
      <view class="bg-img" wx:for="{{imgList}}" wx:key="index" bindtap="ViewImage" data-env="{{_env}}" data-url="{{imgList[index]}}">
        <image src='{{imgList[index]}}' mode='aspectFill'></image>
        <view class="cu-tag bg-red" catchtap="DelImg" data-env="{{_env}}" data-index="{{index}}">
          <text class="cuIcon-close"></text>
        </view>
      </view>
      <view class="solids" bindtap="ChooseImage" data-env="{{_env}}" wx:if="{{!imgList.length||imgList.length<(size||9)}}">
        <text class="cuIcon-cameraadd"></text>
      </view>
    </view>
  </view>
</template>

<!-- 步数累加器 -->
<template name="stepper">
  <view class="bg-white flex align-center padding-xs padding-left-sm">
    <button class="cu-btn bg-gray" disabled="{{(value||0)<=(min||0)||disabled}}" data-event-opts="{{[value||0, min, max, step?step:1, 'minus']}}" data-tindex="{{tindex}}" data-route="{{route}}" catchtap="stepper">
      <view class="cuIcon-move"></view>
    </button>
    <input class="text-center" type="digit" value="{{value}}" data-event-opts="{{[value||0, min, max, step?step:1, 'input']}}" data-tindex="{{tindex}}" data-route="{{route}}" bindinput="stepper" style="padding-left:10rpx;width:auto;max-width:100rpx;" />
    <button class="cu-btn bg-gray" disabled="{{(value||0)>=(max||10)||disabled}}" data-event-opts="{{[value||0, min, max, step?step:1, 'plus']}}" data-tindex="{{tindex}}" data-route="{{route}}" catchtap="stepper">
      <view class="cuIcon-add"></view>
    </button>
  </view>
</template>

<!-- 星评 -->
<template name="rate">
  <view class="padding-xs padding-lr">
    <block wx:for="{{count}}" wx:for-item="star" wx:for-index="rating" wx:key="rating">
      <view style="display:inline;" class="text-{{size||''}}" data-index="{{rating}}" catchtap="clickRate">
        <text class="{{[rating<value?'text-orange cuIcon-' + (icon ||'favor') + 'fill':' text-gray cuIcon-' + ( icon || 'favor')]}}"></text>
      </view>
    </block>
  </view>
</template>
